{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@decharge/sdk": ["packages/sdk/src"],
      "@decharge/types": ["packages/types/src"],
      "@decharge/ui": ["packages/ui/src"],
      "@decharge/utils": ["packages/utils/src"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "dist", "build", "target"]
}